    </div>
    <!--/.col-->
</div>
<!--/.row-->

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-5">
                <h4 class="card-title mb-0">Map</h4>
                <div class="small text-muted">@System.DateTime.Today.ToString("dd MMM yyyy")</div>
            </div>
            <!--/.col-->
            <div class="col-sm-7 d-none d-md-block">
                <button type="button" class="btn btn-primary float-right">
                    <i class="icon-cloud-download"></i>
                </button>
                <div class="btn-group btn-group-toggle float-right mr-3" data-toggle="buttons">
                    <label class="btn btn-outline-secondary">
                        <input type="radio" name="options" id="option1" autocomplete="off"> Option1
                    </label>
                    <label class="btn btn-outline-secondary active">
                        <input type="radio" name="options" id="option2" autocomplete="off" checked> Option2
                    </label>
                    <label class="btn btn-outline-secondary">
                        <input type="radio" name="options" id="option3" autocomplete="off"> Option3
                    </label>
                </div>
            </div>
            <!--/.col-->
        </div>
        <!--/.row-->
        <div class="chart-wrapper" style="height:500px;margin-top:40px;">
            <div id="map" style="height: 500px;"></div>
        </div>
    </div>

</div>
<!--/.card-->
@* view-modals *@
@section Modals {
}

@* view-scripts *@
@section Scripts {
    <script>
        function showMap() {
            var map = L.map('map').setView([33.4977, 36.3013], 11);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: ''
                }).addTo(map);

                @foreach(var asset in Model)
                {
                    <text>
                        L.marker([@asset.Lng, @asset.Lat]).addTo(map)
                            .bindPopup('@asset.Name')
                            .openPopup();
                        @*var circle = L.circle([@asset.Lng, @asset.Lat], {
                            color: 'red',
                            fillColor: '#f03',
                            fillOpacity: 0.5,
                            radius: 500
                        }).addTo(map);*@
                    </text>
                }
        }

        $(function () {
            showMap();
        });
    </script>
}

