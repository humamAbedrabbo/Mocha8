<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AMS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navAdmin" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navAdmin">
                                <a class="dropdown-item" href="/Tenants">Tenants</a>
                                <a class="dropdown-item" href="/Clients">Clients</a>
                                <a class="dropdown-item" href="/Assets">Assets</a>
                                <a class="dropdown-item" href="/Tickets">Tickets</a>
                                <a class="dropdown-item" href="/TodoTasks">Tasks</a>
                                <a class="dropdown-item" href="/Locations">Locations</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/ClientTypes">Client Types</a>
                                <a class="dropdown-item" href="/LocationTypes">Location Types</a>
                                <a class="dropdown-item" href="/AssetTypes">Asset Types</a>
                                <a class="dropdown-item" href="/TicketTypes">Ticket Types</a>
                                <a class="dropdown-item" href="/TodoTaskTypes">Task Types</a>
                                <a class="dropdown-item" href="/ItemTypes">Item Types</a>
                                <a class="dropdown-item" href="/MetaFields">Meta Fields</a>
                                <a class="dropdown-item" href="/UserGroups">User Groups</a>
                                <a class="dropdown-item" href="/CustomLists">Custom Lists</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Members">Members</a>
                                <a class="dropdown-item" href="/AssetItems">Items</a>
                                <a class="dropdown-item" href="/AssetCustodians">Custodians</a>
                                <a class="dropdown-item" href="/TicketAssets">Ticket Assets</a>
                                <a class="dropdown-item" href="/CustomListItems">List Items</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - AMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
