@model IEnumerable<AMS.Models.Ticket>

@{
    ViewData["Title"] = "My Tickets";
    AmsUser user = ViewData["Me"] as AmsUser;
}

@* view-styles *@
@section Styles {
}

@*view-breadcrumbs*@
@section Breadcrumbs {
}

@* view-content *@
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> My Tickets (@Model.Count())
            </div>
            <div class="card-body">

                <table id="table"
                       data-search="true"
                       data-pagination="true"
                       data-show-export="true"
                       data-filter-control="true"
                       data-show-search-clear-button="true"
                       class="table">
                    <thead>
                        <tr>
                            <th data-field="code" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.Code)
                            </th>

                            <th data-field="summary" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.Summary)
                            </th>

                            <th data-field="status" data-sortable="true" data-filter-control="select">
                                @Html.DisplayNameFor(model => model.Status)
                            </th>

                            <th data-field="dueDate" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.DueDate)
                            </th>

                            <th data-field="client" data-sortable="true" data-filter-control="select">
                                @Html.DisplayNameFor(model => model.ClientId)
                            </th>
                            <th data-field="ticketType" data-sortable="true" data-filter-control="select">
                                @Html.DisplayNameFor(model => model.TicketTypeId)
                            </th>

                            <th data-field="location" data-sortable="true" data-filter-control="select">
                                @Html.DisplayNameFor(model => model.LocationId)
                            </th>
                            <th data-field="assignment" data-sortable="true" data-filter-control="input">
                                Assignment
                            </th>
                            <th data-field="actions"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Tickets" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Code)</a>
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Summary)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.DueDate)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Client.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location.Name)
                                </td>

                                @if (item.Assignments.Any(x => x.UserId == user?.Id))
                                {
                                    <td>Assigned To Me</td>
                                }
                                else
                                {
                                    <td>
                                        <ul class="list-unstyled list-inline">
                                            @foreach (var a in item.Assignments)
                                            {
                                                @if (a.UserId.HasValue)
                                                {
                                                    <li>@a.User?.DisplayName</li>
                                                }
                                                else
                                                {
                                                    <li>@a.UserGroup?.Name</li>
                                                }
                                            }
                                        </ul>
                                    </td>
                                }

                            <td>
                                <a class="btn-sm text-white btn-info mx-1" asp-controller="Assignments" asp-action="Index" asp-route-ticketId="@item.Id"><i class="fa fa-list mx-1"></i>Assignments</a>

                                <a class="btn-sm text-white btn-info mx-1" asp-controller="TodoTasks" asp-action="Index" asp-route-ticketId="@item.Id"><i class="fa fa-tasks mx-1"></i>Tasks</a>

                                @if (!item.Assignments.Any(x => x.UserId == user?.Id))
                                {
                                    <a class="btn-sm text-white btn-info mx-1" asp-controller="My" asp-action="Pick" asp-route-ticketId="@item.Id"><i class="icon-check mx-1"></i>Pick</a>
                                }
                            </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!--/.col-->
</div>

@* view-modals *@
@section Modals {
}

@* view-scripts *@
@section Scripts {
    <script>
        $(function () {
            var $table = $("#table").bootstrapTable();
        });
    </script>
}


