@model IEnumerable<AMS.Models.Assignment>

@{
    ViewData["Title"] = "Assignments";
}


@* view-styles *@
@section Styles {
}

@*view-breadcrumbs*@
@section Breadcrumbs {
}

@* view-content *@
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Assignments
            </div>
            <div class="card-body">
                <div class="mb-1">
                    <a asp-action="Create" asp-route-ticketId="@ViewBag.FilterTicketId" asp-route-todoTaskId="@ViewBag.FilterTodoTaskId" class="btn btn-primary">
                        Add Assignment
                    </a>
                </div>
                <table id="table"
                       data-search="true"
                       data-pagination="true"
                       data-show-export="true"
                       data-filter-control="true"
                       data-show-search-clear-button="true"
                       class="table">
                    <thead>
                        <tr>
                            <th data-field="userGroup" data-sortable="true" data-filter-control="select">
                                @Html.DisplayNameFor(model => model.UserGroupId)
                            </th>
                            <th data-field="user" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.UserId)
                            </th>
                            <th data-field="role" data-sortable="true" data-filter-control="select">
                                @Html.DisplayNameFor(model => model.RoleName)
                            </th>
                            <th data-field="ticket" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.TicketId)
                            </th>
                            <th data-field="todoTask" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.TodoTaskId)
                            </th>
                            <th data-field="actions"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserGroup.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.DisplayName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoleName)
                                </td>
                                <td>
                                    <a asp-controller="Tickets" asp-action="Details" asp-route-id="@item.TicketId">@Html.DisplayFor(modelItem => item.Ticket.Summary)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TodoTask.Summary)
                                </td>
                                <td>
                                    <a class="btn-sm btn-secondary mx-1" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil mx-1"></i>Edit</a>
                                    <a class="btn-sm btn-secondary mx-1" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-list mx-1"></i>Details</a>
                                    <a class="btn-sm btn-danger mx-1" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-remove mx-1"></i>Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!--/.col-->
</div>

@* view-modals *@
@section Modals {
}

@* view-scripts *@
@section Scripts {
    <script>
        $(function () {
            var $table = $("#table").bootstrapTable();
        });
    </script>
}

