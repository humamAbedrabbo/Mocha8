@model IEnumerable<AMS.Models.TodoTask>

@{
    ViewData["Title"] = "Todo Tasks";
}

@* view-styles *@
@section Styles {
}

@*view-breadcrumbs*@
@section Breadcrumbs {
}

@* view-content *@
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Todo Tasks
            </div>
            <div class="card-body">

                <table id="table"
                       data-search="true"
                       data-pagination="true"
                       data-show-export="true"
                       data-filter-control="true"
                       data-show-search-clear-button="true"
                       class="table">
                    <thead>
                        <tr>
                            <th data-field="ticket" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.Ticket)
                            </th>
                            <th data-field="summary" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.Summary)
                            </th>
                            <th data-field="dueDate" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.DueDate)
                            </th>
                            <th data-field="status" data-filter-control="select">
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th data-field="todoTaskType" data-filter-control="select">
                                @Html.DisplayNameFor(model => model.TodoTaskType)
                            </th>


                            <th data-field="actions"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.Ticket?.Code
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ticket.Summary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DueDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TodoTaskType.Name)
                            </td>

                            <td>
                                <a class="btn-sm btn-secondary mx-1" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil mx-1"></i>Edit</a>
                                <a class="btn-sm btn-secondary mx-1" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-list mx-1"></i>Details</a>
                                <a class="btn-sm btn-danger mx-1" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-remove mx-1"></i>Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
    <!--/.col-->
</div>

@* view-modals *@
@section Modals {
}

@* view-scripts *@
@section Scripts {
    <script>
        $(function () {
            var $table = $("#table").bootstrapTable();
        });
    </script>
}


