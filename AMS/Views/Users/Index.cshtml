@model IEnumerable<AMS.Models.AmsUser>

@{
    ViewData["Title"] = "Users";
}


@* view-styles *@
@section Styles {
}

@*view-breadcrumbs*@
@section Breadcrumbs {
}

@* view-content *@
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-users"></i> Users
            </div>
            <div class="card-body">
                <div class="mb-1">
                    <a asp-action="Create" class="btn btn-primary">
                        Add User
                    </a>
                </div>
                <table id="table"
                       data-search="true"
                       data-pagination="true"
                       data-show-export="true"
                       data-filter-control="true"
                       data-show-search-clear-button="true"
                       class="table">
                    <thead>
                        <tr>
                            <th data-field="name" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.PictureUrl)
                            </th>
                            <th data-field="userName" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th data-field="displayName" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.DisplayName)
                            </th>
                            <th data-field="email" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th data-field="phone" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th data-field="company" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.Company)
                            </th>
                            <th data-field="jobTitle" data-sortable="true" data-filter-control="input">
                                @Html.DisplayNameFor(model => model.JobTitle)
                            </th>
                            <th data-field="actions"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <img src="@item.PictureUrl" class="img-avatar" width="50" height="50" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DisplayName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Company)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobTitle)
                            </td>

                            <td>
                                <a class="btn-sm btn-secondary mx-1" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil mx-1"></i>Edit</a>
                                <a class="btn-sm btn-secondary mx-1" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-list mx-1"></i>Details</a>
                                <a class="btn-sm btn-danger mx-1" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-remove mx-1"></i>Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!--/.col-->
</div>

@* view-modals *@
@section Modals {
}

@* view-scripts *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>
        $(function () {
            var $table = $("#table").bootstrapTable();
        });
    </script>

}


